{
  "extends": "@rushstack/heft-jest-plugin/includes/jest-shared.config.json",

  "testEnvironment": "jest-environment-node",

  "collectCoverage": true,

  "roots": ["<rootDir>/dist"],

  "testMatch": ["<rootDir>/dist/test/**/*.{spec,test}.js"],

  "collectCoverageFrom": [
    "dist/**/*.js",
    "!dist/**/*.d.ts",
    "!dist/**/*.test.js",
    "!dist/**/test/**",
    "!dist/**/__tests__/**",
    "!dist/**/__fixtures__/**",
    "!dist/**/__mocks__/**"
  ]
}
