/**
 * Defines configuration used by core Heft.
 */
{
  "$schema": "https://developer.microsoft.com/json-schemas/heft/v0/heft.schema.json",

  "phasesByName": {
    "lint": {
      "tasksByName": {
        "lint": {
          "taskPlugin": {
            "pluginPackage": "@hz-9/heft-nest-plugin",
            "pluginName": "nest-lint-plugin"
          }
        }
      }
    },

    "start": {
      "tasksByName": {
        "nest-start": {
          "taskPlugin": {
            "pluginPackage": "@hz-9/heft-nest-plugin",
            "pluginName": "nest-start-plugin"
          }
        }
      }
    },

    "build-pre": {
      "phaseDependencies": ["lint"],

      "tasksByName": {
        "nest-build": {
          // "taskDependencies": ["static-copy"],
          "taskPlugin": {
            "pluginPackage": "@hz-9/heft-nest-plugin",
            "pluginName": "nest-build-plugin"
          }
        }
      }
    },

    "build": {
      "phaseDependencies": ["lint"],

      "cleanFiles": [{ "includeGlobs": ["dist"] }],

      "tasksByName": {
        "nest-build": {
          "taskPlugin": {
            "pluginPackage": "@hz-9/heft-nest-plugin",
            "pluginName": "nest-build-plugin"
          }
        },

        "api-extractor": {
          "taskDependencies": ["nest-build"],
          "taskPlugin": {
            "pluginPackage": "@rushstack/heft-api-extractor-plugin"
          }
        }
      }
    },

    "test": {
      "phaseDependencies": ["build-pre"],

      "tasksByName": {
        "jest": {
          "taskPlugin": {
            "pluginPackage": "@rushstack/heft-jest-plugin"
          }
        }
      }
    },

    "test-all": {
      "phaseDependencies": ["build"],

      "tasksByName": {
        "jest": {
          "taskPlugin": {
            "pluginPackage": "@rushstack/heft-jest-plugin"
          }
        }
      }
    }
  }
}
