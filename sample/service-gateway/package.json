{
  "name": "sample-service-gateway",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "author": "Chen Zhen",
  "dependenciesMeta": {
    "@hz-9/a4-core": {
      "injected": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "license": "MIT",
  "dependencies": {
    "@hz-9/a4-config": "workspace:*",
    "@hz-9/a4-core": "workspace:*",
    "@hz-9/a4-docs": "workspace:*",
    "@hz-9/a4-log-log4js": "workspace:*",
    "@hz-9/a4-micro-service": "workspace:*",
    "@hz-9/a4-network": "workspace:*",
    "@hz-9/a4-registry-eureka": "workspace:*",
    "@hz-9/a4-safe": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "class-transformer": "~0.5.1",
    "class-validator": "~0.14.0",
    "http-proxy": "~1.18.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "~9.0.2",
    "pg": "~8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@hz-9/eslint-config-airbnb-ts": "~0.5.4",
    "@hz-9/heft-nest-rig": "workspace:*",
    "@nestjs/cli": "^10.0.0",
    "@types/http-proxy": "~1.17.14",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "~9.0.6",
    "@types/node": "~20.3.1",
    "@types/qs": "~6.9.9",
    "eslint": "^8.2.0",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": ">=5.0.0 <5.4.0",
    "webpack": "^5.0.0"
  }
}
